resources:
- name: namespace-bigjob
  type: {{ env['project'] }}/{{ properties['cluster'] }}-v1:/api/v1/namespaces/default/namespaces
  properties:
    apiVersion: v1
    kind: Namespace
    metadata:
      name: bigjob
- name: service-
  type: {{ env['project'] }}/{{ properties['cluster'] }}-v1:/api/v1/namespaces/bigjob/services
  properties:
- name: deploy-bigjob
  type: {{ env['project'] }}/{{ properties['cluster'] }}-v1:/api/apps/v1/namespaces/bigjob/deployments
  properties:
    apiVersion: apps/v1
    kind: Deployment
    metadata:
      name: bigjob
      namespace: bigjob
    spec:
      replicas: 5
      selector:
        matchLabels:
          app: bigjob
      template:
        metadata:
          labels:
            app: bigjob
        spec:
          containers:
          - name: bigjob
            image: wordpress
            resources:
              requests:
                cpu: 1500m 
