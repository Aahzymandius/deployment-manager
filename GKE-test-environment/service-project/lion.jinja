  type: {{ env['project'] }}/{{ properties['cluster'] }}-v1:/api/apps/v1/namespaces/bigjob/deployments
  properties:
apiVersion: apps/v1
kind: Deployment
metadata: 
  name: working
  namespace: working
  labels:
    app: working
spec:
  replicas: 2
  selector:
    matchLabels:
      app: working
  template:
    metadata:
      labels:
        app: working
    spec:
      containers:
      - name: working
        image: jazzdd/alpine-flask:python3
        ports:
        - containerPort: 80
        readinessProbe:
          httpGet:
            path: /probe/ready
            port: 80
- name: deploy-bigjob
  type: {{ env['project'] }}/{{ properties['cluster'] }}-v1:/api/apps/v1/namespaces/bigjob/deployments
  properties:
apiVersion: apps/v1
kind: Deployment
metadata:
  name: working1
  namespace: working
  labels:
    app: working
    version: 2
spec:
  replicas: 2
  selector:
    matchLabels:
      app: working
      version: 2
  template:
    metadata:
      labels:
        app: working
        version: 2
    spec:
      containers:
      - name: working
        image: httpd
        ports:
        - containerPort: 80
        readinessProbe:
          httpGet:
            path: /
---
apiVersion: v1
kind: Service
metadata:
  name: working
  namespace: working
spec:
  type: NodePort
  selector:
    app: working
  ports:
  - port: 8080
    targetPort: 80
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: working
  namespace: working
spec:
  backend:
    serviceName: working
    servicePort: 8080
